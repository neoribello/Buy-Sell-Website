<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/jpg" href="https://i.ibb.co/9bvfZWB/lightkicks.jpg">
 
  <!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
<link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <title>Search</title>
</head>
<body>
  <%- include('_header'); %>
  <main style="margin: 1em;">
    <h3 class="search-title">Search for a product</h3>

    <div class= "search-form">
  <form method="GET" action="/search">
      <div class="row">
        <div class="col">
          <input type="number" class="form-control" placeholder="$ Min Price" name="minPrice">
        </div>
        <div class="col">
          <input type="number" class="form-control" placeholder="$ Max Price" name="maxPrice">
        </div>
        <button class="btn btn-dark" type="submit">Filter</button>
      </div>
    
    
  </form>
  </div>


  <div class="shoe-filter">
  <% for (let product of products) { %>
    <div class="card">
      <img class="card-img-top shoe_image" src="<%= product.thumbnail_photo %>" alt="Card image cap">
      <% if (product.sold) { %>
        <div class="sold-banner">SOLD</div>
      <% } %>
      <div class="card-body">
        <h5 class="card-title" ><%= product.title %></h5>
        <p class="card-text"><%= product.description %></p>
        <p class="card-text"> $<%= product.price%></p>
        <a href="http://localhost:8080/products/<%=product.id%>" class="btn btn-dark">See Product</a>
      </div>
    </div>
  <% } %>
</div>
 

    
 <!-- Bootstrap JS -->
 <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
 <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
 <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script> 
  
</body>
</html>   